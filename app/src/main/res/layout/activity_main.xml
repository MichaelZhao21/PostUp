<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Hi"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/DraftsButton"
        android:layout_width="113dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:text="Drafts"
        app:layout_constraintStart_toStartOf="@+id/NewButton"
        app:layout_constraintTop_toBottomOf="@+id/NewButton" />

    <Button
        android:background="@drawable/roundedbutton"
        android:id="@+id/HistoryButton"
        android:layout_width="113dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:text="History"
        app:layout_constraintBottom_toBottomOf="@+id/DraftsButton"
        app:layout_constraintEnd_toEndOf="@+id/NewButton"
        app:layout_constraintTop_toBottomOf="@+id/NewButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/NewButton"
        android:layout_width="251dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:text="NEW"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="@+id/Title"
        app:layout_constraintStart_toStartOf="@+id/Title"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <ImageButton
        android:id="@+id/SettingsButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="208dp"
        app:layout_constraintEnd_toEndOf="@+id/NewButton"
        app:layout_constraintStart_toStartOf="@+id/NewButton"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/Title"
        android:layout_width="249dp"
        android:layout_height="214dp"
        android:layout_marginTop="128dp"
        android:text="Post Up"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>