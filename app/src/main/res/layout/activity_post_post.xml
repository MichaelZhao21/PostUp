<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostPostActivity">

    <Button
        android:id="@+id/fb"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/roundedbuttonprimary"
        android:text="Facebook"
        app:layout_constraintBottom_toTopOf="@+id/ig"
        app:layout_constraintEnd_toEndOf="@+id/ig"
        app:layout_constraintStart_toStartOf="@+id/ig"
        app:layout_constraintTop_toBottomOf="@+id/postPostTitle" />

    <TextView
        android:id="@+id/postPostTitle"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:text="Share and Post"
        style="@style/Header"
        app:layout_constraintStart_toEndOf="@+id/backSharePost"
        app:layout_constraintTop_toTopOf="@+id/backSharePost" />

    <Button
        android:id="@+id/ig"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="@drawable/roundedbuttonprimary"
        android:text="Instagram"
        app:layout_constraintBottom_toTopOf="@+id/twitter"
        app:layout_constraintEnd_toEndOf="@+id/twitter"
        app:layout_constraintStart_toStartOf="@+id/twitter" />

    <Button
        android:id="@+id/twitter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="@drawable/roundedbuttonprimary"
        android:text="Twitter"
        app:layout_constraintBottom_toTopOf="@+id/export"
        app:layout_constraintEnd_toEndOf="@+id/export"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/export" />

    <Button
        android:id="@+id/export"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="@drawable/roundedbuttonprimary"
        android:text="Export"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/backSharePost"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedbuttonprimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

</androidx.constraintlayout.widget.ConstraintLayout>