<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPostActivity">

    <ImageButton
        android:id="@+id/backViewPost"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundedbuttonprimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <ImageView
        android:id="@+id/pictureDisplayView"
        android:layout_width="347dp"
        android:layout_height="301dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textDisplayView"
        app:layout_constraintStart_toStartOf="@+id/textDisplayView"
        app:layout_constraintTop_toBottomOf="@+id/viewPostTitle"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textDisplayView"
        android:layout_width="355dp"
        android:layout_height="206dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pictureDisplayView" />

    <Button
        android:id="@+id/toPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/roundedbuttonprimary"
        android:text="Post"
        app:layout_constraintEnd_toStartOf="@+id/editPostButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDisplayView" />

    <Button
        android:id="@+id/editPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/roundedbuttonprimary"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDisplayView" />

    <TextView
        style="@style/Header"
        android:id="@+id/viewPostTitle"
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="[Post Name]"
        app:layout_constraintStart_toEndOf="@+id/backViewPost"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>