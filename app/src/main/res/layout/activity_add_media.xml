<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMediaActivity">

    <TextView
        android:id="@+id/feedbackInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show error messages here!"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="119dp" />

    <ImageButton
        android:id="@+id/addMediaBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/abc_vector_test"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="29dp" />

    <EditText
        android:id="@+id/textDisplayAdd"
        android:layout_width="378dp"
        android:layout_height="423dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="154dp" />

    <ImageView
        android:id="@+id/pictureDisplayAdd"
        android:layout_width="377dp"
        android:layout_height="394dp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="154dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/submitAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="642dp" />

    <TextView
        android:id="@+id/addMediaTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Media"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="80dp" />
</androidx.constraintlayout.widget.ConstraintLayout>